.chat-main
  .chat-main__group-info
    %h2.chat-main__group-info__header-leftbox
      = @group.name
      %ul.chat-main__group-info__header-leftbox__current-group
        %li.chat-main__group-info__header-leftbox__current-group__member-list
          Memberï¼š
        %li.chat-main__group-info__header-leftbox__current-group__member
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group), class: "chat-main__group-info__edit-btn" do
      .chat-main__group-info__edit-btn__text
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form 
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: "chat-main__message-form__input-text", placeholder: "type a messege"
      .chat-main__message-form__mask
        = f.label :image, class: "chat-main__message-form__mask__image-box" do
          = icon("far", "image", class: "chat-main__message-form__mask__input-img")
          = f.file_field :image, class: "chat-main__message-form__mask__file"
      = f.submit "Send", class: "chat-main__message-form__submit-btn"
