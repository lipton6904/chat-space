.side-bar
  .side-bar__user-name
    .side-bar__user-name__side-box
      %p.side-bar__user-name__side-box__nick-name
        = current_user.name
      %ul.side-bar__user-name__side-box__memo
        %li
          = link_to new_group_path do
            = icon('far', 'edit', class: "side-bar__user-name__side-box__memo__new-group")
        %li
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog", class: "side-bar__user-name__side-box__memo__edit-account")
  .side-bar__group-list
    - current_user.groups.each do |group|
      %ul.side-bar__group-list__group-box
        = link_to group_messages_path(group) do
          %li.side-bar__group-list__group-box__group-name
            = group.name
          %li.side-bar__group-list__group-box__new-messege
            = group.show_last_message
